{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "command": {
    "ctx": {
      "description": "Prompt with context7 MCP server.",
      "template": "$ARGUMENTS. use context7"
    },
    "hi": {
      "agent": "build",
      "description": "Say hi. Confirms readiness.",
      "template": "echo hi"
    }
  },
  "instructions": [
    "CONTRIBUTING.md",
    "docs/guidelines.md",
    ".cursor/rules/*.md"
  ],
  "mcp": {
    "context7": {
      "command": ["bun", "x", "@upstash/context7-mcp"],
      "enabled": true,
      "type": "local"
    }
  },
  "model": "ollama/cogito:14b",
  "provider": {
    "ollama": {
      "models": {
        "cogito:14b": { "name": "Cogito" },
        "cogito:3b": { "name": "Cogito Mini" }
      },
      "name": "Ollama",
      "npm": "@ai-sdk/openai-compatible",
      "options": { "baseURL": "http://localhost:11434/v1" }
    }
  },
  "small_model": "ollama/cogito:3b",
  "theme": "aura"
}
